# =============================================================================
# FraudGuard-360 Environment Configuration Template
# =============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env files with real credentials to version control

# -----------------------------------------------------------------------------
# Kafka Configuration
# -----------------------------------------------------------------------------
KAFKA_BOOTSTRAP_SERVERS=kafka:9092
KAFKA_RAW_TRANSACTIONS_TOPIC=raw-transactions
KAFKA_SCORED_TRANSACTIONS_TOPIC=scored-transactions
KAFKA_CONSUMER_GROUP_ID=fraud-detection-group

# -----------------------------------------------------------------------------
# PostgreSQL Database
# -----------------------------------------------------------------------------
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=fraudguard
POSTGRES_USER=fraudguard_user
POSTGRES_PASSWORD=change_this_password_in_production

# -----------------------------------------------------------------------------
# Redis Cache
# -----------------------------------------------------------------------------
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=change_this_password_in_production
REDIS_DB=0

# -----------------------------------------------------------------------------
# Neo4j Graph Database
# -----------------------------------------------------------------------------
NEO4J_HOST=neo4j
NEO4J_BOLT_PORT=7687
NEO4J_HTTP_PORT=7474
NEO4J_USER=neo4j
NEO4J_PASSWORD=change_this_password_in_production

# -----------------------------------------------------------------------------
# API Gateway Configuration
# -----------------------------------------------------------------------------
API_GATEWAY_HOST=0.0.0.0
API_GATEWAY_PORT=8000
API_GATEWAY_WORKERS=4
API_GATEWAY_RELOAD=false
API_GATEWAY_LOG_LEVEL=info

# -----------------------------------------------------------------------------
# ML Service Configuration
# -----------------------------------------------------------------------------
ML_SERVICE_HOST=0.0.0.0
ML_SERVICE_PORT=8001
ML_MODEL_PATH=/app/models/fraud_detection_model.pkl
ML_FEATURE_SCALER_PATH=/app/models/feature_scaler.pkl

# -----------------------------------------------------------------------------
# Risk Scoring Service Configuration
# -----------------------------------------------------------------------------
RISK_SCORING_HOST=0.0.0.0
RISK_SCORING_PORT=8002
RISK_THRESHOLD_HIGH=0.8
RISK_THRESHOLD_MEDIUM=0.5
RISK_THRESHOLD_LOW=0.3

# -----------------------------------------------------------------------------
# Monitoring & Observability
# -----------------------------------------------------------------------------
PROMETHEUS_HOST=prometheus
PROMETHEUS_PORT=9090
METRICS_ENABLED=true
METRICS_PORT=8000

# -----------------------------------------------------------------------------
# Security & CORS
# -----------------------------------------------------------------------------
# Comma-separated list of allowed origins (update for production)
CORS_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_HEADERS=*

# JWT/Authentication (if implementing auth)
JWT_SECRET_KEY=generate_a_strong_secret_key_here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=60

# -----------------------------------------------------------------------------
# Logging
# -----------------------------------------------------------------------------
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE_PATH=/var/log/fraudguard

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------
ENABLE_ML_INFERENCE=true
ENABLE_GRAPH_ANALYTICS=true
ENABLE_REAL_TIME_ALERTS=true

# -----------------------------------------------------------------------------
# Rate Limiting
# -----------------------------------------------------------------------------
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=20

# -----------------------------------------------------------------------------
# Cloud/Kubernetes Configuration (Optional)
# -----------------------------------------------------------------------------
# KUBERNETES_NAMESPACE=fraudguard-prod
# CLOUD_PROVIDER=oci
# REGION=us-ashburn-1

# -----------------------------------------------------------------------------
# Development/Testing Settings
# -----------------------------------------------------------------------------
DEBUG=false
TESTING=false
MOCK_KAFKA=false
MOCK_DATABASES=false
